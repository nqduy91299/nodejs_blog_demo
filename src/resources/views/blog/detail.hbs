<div class="row detail-blog-page">
    <div class="col-12">
        <h1>{{blog.title}}</h1>
        <span class="font-italic">
            By {{blog.createdBy.name}} - {{dateTransform blog.createdAt}}
        </span>
        <div class="img-blog d-flex justify-content-center">
            <img class="w-50" src="/images/{{blog.image}}" alt="image">
        </div>
        <span>
            {{blog.content}}
        </span>
    </div>
    {{>comment}}
</div>