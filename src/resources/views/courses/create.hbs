<div class="mt-3">
    <h1>Thêm Mới Video</h1>
    <form class="mt-3" method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên:</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả:</label>
            <textarea name="description" id="description" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video YouTube: <span class="font-italic">(Có thể dùng link, id, iframe, ...)</span></label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        {{!-- <div class="form-group">
            <label for="level">Cấp Độ:</label>
            <input type="text" class="form-control" id="level" name="level">
        </div> --}}
        <button type="submit" class="btn btn-primary">Thêm mới</button>
    </form>
</div>