<div class="mt-3">
    <h1>Chỉnh Sửa Video</h1>
    <form class="mt-3" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên:</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả:</label>
            <textarea class="form-control" name="description" id="description" cols="30" rows="10">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video YouTube: <span class="font-italic">(Có thể dùng link, id, iframe, ...)</span></label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>
        {{!-- <div class="form-group">
            <label for="level">Cấp Độ:</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level">
        </div> --}}
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>